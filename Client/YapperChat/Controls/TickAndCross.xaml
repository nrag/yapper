<UserControl x:Class="YapperChat.Controls.TickAndCross"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="480" d:DesignWidth="480">

  <Canvas>
    <TextBlock Text="×" FontWeight="ExtraBold" FontSize="48"
                             Canvas.Left="490" Canvas.Top="-80" Foreground="Red"/>
    <TextBlock Text="✔" FontWeight="ExtraBold" FontSize="48" Foreground="Green"
                             Canvas.Left="-50" Canvas.Top="-80"/>
  </Canvas>
</UserControl>
